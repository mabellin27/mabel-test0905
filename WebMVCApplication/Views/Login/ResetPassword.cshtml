@model WebMVCApplication.Models.ResetPasswordViewModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


@using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post))
{
    <div class="container form-container">
        <h4>ResetPassword</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(m => m.UserName, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.UserName, new { @require = "true", placehold = "Account" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.NewPwd, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.NewPwd, new { @require = "true", placehold = "New Password" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.RetypePwd, new { @class = "control-label col-sm-3" })
            <div class="col-sm-9">
                @Html.TextBoxFor(m => m.RetypePwd, new { @require = "true", placehold = "Password Again" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-default">Reset</button>
            </div>
        </div>
    </div>
    <div class="container" style="background-color:#f1f1f1">
        <div class="link">
            @Html.ActionLink("Back", "Index")
        </div>
    </div>
    
}
